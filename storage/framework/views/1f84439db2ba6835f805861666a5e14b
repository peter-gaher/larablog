<?php $__env->startSection('title', $post->title); ?>

<?php $__env->startSection('content'); ?>

    <section class="box">
        <article class="post full-post">

            <header class="post-header">
                <h1 class="box-heading">
                    <a href="<?php echo e(URL::current()); ?>">
                        <?php echo e($post->title); ?>

                    </a>

                    <?php if (app('Illuminate\Contracts\Auth\Access\Gate')->check('edit-post', $post)): ?>
                        <a href="<?php echo e(route('post.edit', $post->id)); ?>" class="btn btn-xs edit-link">edit</a>
                    <?php endif; ?>
                    <?php if (app('Illuminate\Contracts\Auth\Access\Gate')->check('delete-post', $post)): ?>
                        <a href="<?php echo e(route('post.delete', $post->id)); ?>" class="btn btn-xs edit-link">&times;</a>
                    <?php endif; ?>

                    <time datetime="<?php echo e($post->datetime); ?>">
                        <small><?php echo e($post->created_at); ?></small>
                    </time>
                </h1>
            </header>

            <div class="post-content">
                <?php echo $post->rich_text; ?>


                <p class="written-by small">
                    <small>- written by
                        <a href="<?php echo e(url('user', $post->user_id)); ?>"><?php echo e($post->user->email); ?></a>
                    </small>
                </p>
            </div>

            <footer class="post-footer">
                <?php echo $__env->make('partials.tags', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
            </footer>

        </article>
    </section>

<?php $__env->stopSection(); ?>
<?php echo $__env->make('master', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>